package Easy;

public class SeachInsertPosition {
	public int searchInsert(int[] nums, int target) {

		int l = 0;
		int r = nums.length;
		int m = 0;
		while (l <= r) {
			if (r == 0)
				return 0;

			if (l == nums.length)
				return nums.length;

			m = (l + r) / 2;
			
			if(m == 0) {
				if(nums[0] > target)
					return 0;
				else
					return 1;
			}
				
			
			
			

		}

		return m;
	}
}
